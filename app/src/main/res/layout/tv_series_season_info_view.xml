<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_series_season_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:maxLines="2"
        android:layout_marginEnd="@dimen/global_default_dimen_20px"
        android:layout_marginStart="@dimen/global_default_dimen_20px"
        android:layout_marginTop="@dimen/global_default_dimen_10px"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/global_default_text_30px" />

    <TextView
        android:id="@+id/tv_series_season_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_series_season_name"
        android:layout_marginEnd="@dimen/global_default_dimen_20px"
        android:layout_marginStart="@dimen/global_default_dimen_20px"
        android:layout_marginTop="@dimen/global_default_dimen_10px"
        android:textSize="@dimen/global_default_text_24px"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_series_season_release_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_series_season_overview"
        android:layout_marginEnd="@dimen/global_default_dimen_20px"
        android:layout_marginStart="@dimen/global_default_dimen_20px"
        android:layout_marginTop="@dimen/global_default_dimen_10px"
        android:textSize="@dimen/global_default_text_22px" />

</RelativeLayout>