<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/global_default_dimen_8px"
    android:elevation="@dimen/global_default_dimen_2px"
    app:cardCornerRadius="@dimen/global_default_dimen_2px">

    <ImageView
        android:id="@+id/tv_series_image_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_default_dimen_300px"
        android:layout_marginEnd="@dimen/global_default_dimen_8px"
        android:layout_marginStart="@dimen/global_default_dimen_8px"
        android:layout_marginTop="@dimen/global_default_dimen_8px"
        android:scaleType="fitXY" />

</android.support.v7.widget.CardView>