<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/global_default_dimen_2px"
    android:paddingBottom="@dimen/global_default_dimen_8px"
    app:cardCornerRadius="@dimen/global_default_dimen_2px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_default_dimen_300px"
        android:layout_marginEnd="@dimen/global_default_dimen_8px"
        android:layout_marginStart="@dimen/global_default_dimen_8px"
        android:layout_marginTop="@dimen/global_default_dimen_8px">

        <ImageView
            android:id="@+id/tv_series_video_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/global_default_dimen_300px"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/play_button_circle"
            android:layout_width="@dimen/global_default_dimen_60px"
            android:layout_height="@dimen/global_default_dimen_60px"
            android:layout_centerInParent="true"
            android:src="@drawable/play_button_background"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/play_button"
            android:layout_width="@dimen/global_default_dimen_60px"
            android:layout_height="@dimen/global_default_dimen_60px"
            android:layout_centerInParent="true"
            android:src="@drawable/play_button"
            android:visibility="gone" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>