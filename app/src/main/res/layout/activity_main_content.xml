<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <include
            android:id="@+id/now_playing_movies_card_view"
            layout="@layout/activity_main_content_item_view" />

        <include
            android:id="@+id/most_popular_movies_card_view"
            layout="@layout/activity_main_content_item_view" />

        <include
            android:id="@+id/top_rated_movies_card_view"
            layout="@layout/activity_main_content_item_view" />

        <include
            android:id="@+id/upcoming_movies_card_view"
            layout="@layout/activity_main_content_item_view" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>