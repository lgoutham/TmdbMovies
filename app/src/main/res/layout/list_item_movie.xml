<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/global_default_dimen_160px"
    android:layout_height="@dimen/global_default_dimen_220px"
    android:layout_marginBottom="@dimen/global_default_dimen_4px"
    android:elevation="0dp"
    android:scaleType="fitXY"
    android:src="@color/cardview_dark_background"
    app:cardCornerRadius="@dimen/global_default_dimen_8px">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/movie_poster"
        android:scaleType="fitXY"
        android:layout_width="@dimen/global_default_dimen_160px"
        android:layout_height="@dimen/global_default_dimen_220px"
        android:transitionName="@string/movie_poster_transition" />

</androidx.cardview.widget.CardView>