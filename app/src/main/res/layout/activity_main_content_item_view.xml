<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/global_default_dimen_6px"
    android:layout_marginEnd="@dimen/global_default_dimen_10px"
    android:layout_marginStart="@dimen/global_default_dimen_10px"
    android:layout_marginTop="@dimen/global_default_dimen_6px"
    app:cardCornerRadius="@dimen/global_default_dimen_4px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_view_movies_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/global_default_dimen_8px"
            android:layout_marginEnd="@dimen/global_default_dimen_16px"
            android:layout_marginStart="@dimen/global_default_dimen_16px"
            android:layout_marginTop="@dimen/global_default_dimen_8px"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <android.support.v4.view.ViewPager
            android:id="@+id/card_view_movies_viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/global_default_dimen_240px"
            android:clipToPadding="false" />

    </LinearLayout>

</android.support.v7.widget.CardView>